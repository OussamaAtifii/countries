  coatOfArms: {
    png: "https://mainfacts.com/media/images/coats_of_arms/es.png",
    svg: "https://mainfacts.com/media/images/coats_of_arms/es.svg",
  },
  startOfWeek: "monday",
  capitalInfo: {
    latlng: [40.4, -3.68],
  },
  postalCode: {
    format: "#####",
    regex: "^(\\d{5})$",
  },
