---

<div>
  <Layout title="country">
    <h1 class="text-4xl font-bold mb-4 text-center pt-5">
      {country.name.common} ({country.cca3})
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 p-5">
      <!-- General Information -->
      <div class="bg-black bg-opacity-30 p-6 rounded-lg shadow-lg card">
        <h2 class="text-xl font-semibold mb-4">General Information</h2>
        <p>
          <span class="font-semibold">Official Name:</span>
          {country.name.official}
        </p>
        <p><span class="font-semibold">Capital:</span> {country.capital}</p>
        <p><span class="font-semibold">Region:</span> {country.region}</p>
        <p><span class="font-semibold">Subregion:</span> {country.subregion}</p>
        <p>
          <span class="font-semibold">Population:</span>
          {country.population.toLocaleString()}
        </p>

        <p><span class="font-semibold">Currencies:</span></p>
        <ul class="list-disc list-inside">
          {
            Object.entries(country.currencies).map(([key, value]) => (
              <li key={key}>
                {value.name} ({value.symbol})
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Flag and Coat of Arms -->
      <div
        class="bg-black bg-opacity-30 p-6 rounded-lg shadow-lg flex flex-col items-center card"
      >
        <h2 class="text-xl font-semibold mb-4">Flag & Coat of Arms</h2>
        <img
          src={country.flags.png}
          alt={country.flags.alt}
          class="w-32 h-auto mb-4"
        />
        <img
          src={country.coatOfArms.png}
          alt="Coat of Arms"
          class="w-32 h-auto"
        />
      </div>

      <!-- Languages -->
      <div class="bg-black bg-opacity-30 p-6 rounded-lg shadow-lg card">
        <h2 class="text-xl font-semibold mb-4">Languages</h2>
        <ul class="list-disc list-inside mb-4">
          {
            Object.entries(country.languages).map(([key, value]) => (
              <li key={key}>{value}</li>
            ))
          }
        </ul>
      </div>

      <!-- Timezones and Driving -->
      <div class="bg-black bg-opacity-30 p-6 rounded-lg shadow-lg card">
        <h2 class="text-xl font-semibold mb-4">Timezones & Driving</h2>
        <p><span class="font-semibold">Timezones:</span></p>
        <ul class="list-disc list-inside mb-4">
          {
            country.timezones.map((timezone, index) => (
              <li key={index}>{timezone}</li>
            ))
          }
        </ul>
        <p>
          <span class="font-semibold">Driving Side:</span>
          {country.car.side}
        </p>
        <p>
          <span class="font-semibold">Car Signs:</span>
          {country.car.signs.join(", ")}
        </p>
      </div>

      <!-- Location Information -->
      <div class="bg-black bg-opacity-30 p-6 rounded-lg shadow-lg card">
        <h2 class="text-xl font-semibold mb-4">Location Information</h2>
        <p>
          <a
            href={country.maps.googleMaps}
            class="hover:underline"
            target="_blank">Google Maps</a
          >
        </p>
        <p>
          <a
            href={country.maps.openStreetMaps}
            class=" hover:underline"
            target="_blank">OpenStreetMap</a
          >
        </p>
        <p>
          <span class="font-semibold">Postal Code:</span>
          {country.postalCode.format}
        </p>
        <p>
          <span class="font-semibold">Area:</span>
          {country.area.toLocaleString()} km²
        </p>
      </div>

      <!-- Borders -->
      <div class="bg-black bg-opacity-30 p-6 rounded-lg shadow-lg card">
        <h2 class="text-xl font-semibold mb-4">Borders</h2>
        <ul class="list-disc list-inside mb-4">
          {
            Object.entries(country.borders).map(([key, value]) => (
              <li key={key}>
                <a
                  href={`https://prueba.com/${value}`}
                  class="hover:underline"
                  target="_blank"
                >
                  {value}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Layout>
  <style>
    * {
      color: white;
    }

    .card{
      box-shadow: 0 0 2px white;
    }

    .card:hover {
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease;
      transform: scale(1.01);
      box-shadow: 0 0 10px white;
    }
  </style>
</div>
